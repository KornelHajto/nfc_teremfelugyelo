<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">

    <!-- Center Floating NFC Button -->
    <LinearLayout
        android:id="@+id/btnNFC"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_alignTop="@id/bottomBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/nfc_circle_bg"
        android:backgroundTintMode="src_over"
        android:clickable="true"
        android:clipToOutline="true"
        android:elevation="10dp"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        android:shape="oval"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.98"
        app:layout_constraintBottom_toBottomOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bottomBar"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/nfc_icon"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <!-- Top border line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E8F0" /> <!-- slate-200 -->

        <!-- Navigation bar -->
        <LinearLayout
            android:id="@+id/navBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5">

            <!-- Timetable -->
            <LinearLayout
                android:id="@+id/navTimetable"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/calendar_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Naptár"
                    android:textColor="#3E07AB"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Notifications -->
            <LinearLayout
                android:id="@+id/navNotifications"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/notification_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Értesítések"
                    android:textColor="#3E07AB"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Spacer for Floating Button -->
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <!-- Absences -->
            <LinearLayout
                android:id="@+id/navAbsence"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/absent_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hiányzások"
                    android:textColor="#3E07AB"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Settings -->
            <LinearLayout
                android:id="@+id/navProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="4dp"
                android:background="#ECE3FF">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/user_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profil"
                    android:textColor="#3E07AB"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerPadding="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="32dp"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanuló neve"
                    android:textColor="#4A148C"
                    android:textSize="24sp"
                    android:textStyle="bold" /> <!-- Deep purple -->

                <!-- Neptun Code Badge -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:layout_marginBottom="4dp"
                    android:backgroundTintMode="src_over"
                    android:clipToOutline="true"
                    android:elevation="2dp">

                <TextView
                    android:id="@+id/tvNeptun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Neptun kód: "
                    android:textColor="#6A1B9A"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvNeptunCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NK2D5G7"
                    android:textColor="#6A1B9A"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
            </LinearLayout>

            <!-- Notifications Header -->
            <TextView
                android:id="@+id/tvNotificationsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:paddingStart="16dp"
                android:text="Értesítések"
                android:textColor="#4A148C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Notification Settings Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:clipToOutline="true"
                android:dividerPadding="8dp"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Enable All Notifications -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Push értesítések"
                            android:textColor="#4A148C"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Értesítések fogadása minden eseményről"
                            android:textColor="#7E57C2"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/switchAllNotifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:thumbTint="#6A1B9A"
                        android:trackTint="#D1C4E9" />
                </LinearLayout>


            </LinearLayout>

            <!-- Log Out Button -->
            <LinearLayout
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_marginTop="160dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true">

                <!-- Log Out Text -->
                <TextView
                    android:id="@+id/tvLogout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kijelentkezés"
                    android:textColor="#DC2626"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Log Out Icon -->
                <ImageView
                    android:id="@+id/iconLogout"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="#DC2626"
                    android:src="@drawable/zone_leave" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>